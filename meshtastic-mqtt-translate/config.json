{
  "name": "Meshtastic: Protobuf to JSON",
  "version": "0.3.2",
  "slug": "meshtastic-mqtt-translate",
  "description": "Convert Meshtastic protobuf messages to JSON and publish them back to MQTT",
  "url": "https://github.com/na4ma4/meshtastic-mqtt-translate/tree/master",
  "startup": "application",
  "services": [
    "mqtt:need"
  ],
  "hassio_api": true,
  "homeassistant": "2025.7.0",
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "boot": "auto",
  "init": false,
  "ingress": false,
  "ingress_port": 8099,
  "timeout": 30,
  "panel_icon": "mdi:bigtop_updates",
  "backup": "hot",
  "watchdog": "http://[HOST]:[PORT:8099]/",
  "map": [
    {
      "type": "share",
      "read_only": false
    },
    {
      "type": "homeassistant_config",
      "read_only": false,
      "path": "/config"
    },
    {
      "type": "addon_config",
      "read_only": false,
      "path": "/addon_config"
    }
  ],
  "options": {
    "broker": {
      "address": "tcp://core-mosquitto:1883",
      "username": "",
      "password": "",
      "clientid": "meshtastic-pb-translator",
      "topic": "msh/ANZ/2/e/#"
    },
    "features": {
      "fanout-relay": false,
      "message-store": false
    },
    "channels": [
      {
        "name": "LongFast",
        "key": "AQ=="
      },
      {
        "name": "ShortSecure",
        "key": "BQ=="
      }
    ]
  },
  "schema": {
    "broker": {
      "address": "str",
      "username": "str?",
      "password": "password?",
      "clientid": "str?",
      "topic": "str"
    },
    "store": {
      "dsn": "url?"
    },
    "features": {
      "fanout-client": "bool?",
      "message-store": "bool?"
    },
    "channels": [
      {
        "name": "str",
        "key": "str"
      }
    ]
  },
  "image": "ghcr.io/na4ma4/meshtastic-mqtt-translate-{arch}"
}