{
  "name": "Meshtastic Protobuf to JSON",
  "version": "0.2.0",
  "slug": "meshtastic-protobuf_to_json",
  "description": "Convert Meshtastic protobuf messages to JSON and publish them back to MQTT",
  "url": "https://github.com/na4ma4/meshtastic-mqtt-bin-to-json/tree/master",
  "startup": "application",
  "services": [
    "mqtt:need"
  ],
  "hassio_api": true,
  "arch": [
    "aarch64",
    "amd64",
    "armv7"
  ],
  "boot": "auto",
  "init": false,
  "ingress": true,
  "timeout": 30,
  "panel_icon": "mdi:bigtop_updates",
  "map": [
    {
      "type": "share",
      "read_only": false
    },
    {
      "type": "homeassistant_config",
      "read_only": false,
      "path": "/config"
    },
    {
      "type": "addon_config",
      "read_only": false,
      "path": "/addon_config"
    }
  ],
  "options": {
    "broker": {
      "address": "core-mosquitto",
      "port": 1883,
      "user": "",
      "password": "",
      "buftopic": "msh/ANZ/2/e/#"
    },
    "channels": [
      {
        "name": "LongFast",
        "key": "AQ=="
      },
      {
        "name": "ShortSecure",
        "key": "BQ=="
      }
    ]
  },
  "schema": {
    "broker": {
      "address": "str",
      "port": "int",
      "user": "str?",
      "password": "str?",
      "buftopic": "str",
      "jsontopic": "str"
    },
    "channels": [
      {
        "name": "str",
        "key": "str"
      }
    ]
  },
  "image": "ghcr.io/na4ma4/mqtt-protobuf-to-json"
}